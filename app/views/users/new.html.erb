<head>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
</head>
<body>
	<div class ='topbar'><h1>Register</h1></div>
	<div class ='container'>
		<div class ='row'>
			<div class= 'col-xs-12 '>
				<br>
				<% if flash[:errors] %>
					<% flash[:errors].each do |error| %>
						<p class='red'><%= error %></p>
					<% end %>
				<% end %>
				<br>
				<div class = 'col-xs-12'>
					<%= simple_form_for(@user, html: {:class => 'form-horizontal'}, :defaults => {:input_html => {:class => 'form-control'} }) do |form| %>
						<div class='form-group'>
							<%= form.input :first_name, required:false, :class => 'form-control' %>
						</div>
						<div class='form-group'>  
							<%= form.input :last_name, required:false, :class => 'col-xs-12' %>
						</div>
						<div class='form-group'>  
							<%= form.input :email, required:false, :class => 'col-xs-12' %>
						</div>
						<div class='form-group'>  
							<%= form.input :password, required:false, :class => 'col-xs-12' %>
						</div>
						<div class='form-group'>  
							<%= form.input :password_confirmation %>
						</div>
						<div class='form-group'>  
							<%= form.button :submit, :class => 'btn btn-primary btn-lg btn-block' %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</body>